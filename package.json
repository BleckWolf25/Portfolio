{
	"name": "bleckwolf25-portfolio",
	"version": "2.0.0",
	"description": "My portfolio website built with Nuxt 3 and Nuxt UI.",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=22.15.0"
	},
	"scripts": {
		"dev": "nuxt dev --host",
		"dev:https": "nuxt dev --https --ssl-cert localhost.pem --ssl-key localhost-key.pem",
		"build": "nuxt build --prerender",
		"build:analyze": "nuxt build --analyze",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"type-check": "vue-tsc --noEmit",
		"type-check:watch": "vue-tsc --noEmit --watch",
		"lint": "eslint . --max-warnings=0",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"check": "npm run format:check && npm run lint && npm run type-check",
		"check:fix": "npm run format && npm run lint:fix && npm run type-check",
		"ci": "npm run check && npm run build",
		"test:build": "npm run build && npm run preview",
		"postinstall": "nuxt prepare",
		"prepare": "npx husky install",
		"clean": "rm -rf .nuxt .output dist node_modules/.cache",
		"fresh": "npm run clean && npm ci && npm run postinstall",
		"dev:debug": "nuxt dev --inspect",
		"analyze:bundle": "npx nuxi analyze",
		"deps:update": "npx taze -w && npm install",
		"pre-commit": "lint-staged",
		"commit": "git-cz"
	},
	"lint-staged": {
		"*.{js,mjs,cjs,ts,vue}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,yml,yaml}": [
			"prettier --write"
		],
		"*.vue": [
			"vue-tsc --noEmit"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"type-enum": [
				2,
				"always",
				[
					"feat",
					"fix",
					"docs",
					"style",
					"refactor",
					"perf",
					"test",
					"build",
					"ci",
					"chore",
					"revert"
				]
			]
		}
	},
	"dependencies": {
		"@iconify-json/mdi": "^1.2.3",
		"@nuxt/fonts": "^0.11.4",
		"@nuxt/image-edge": "^1.3.0-28493895.369b747",
		"@nuxt/scripts": "^0.11.7",
		"@nuxt/ui": "^3.1.2",
		"@nuxtjs/color-mode": "^3.5.2",
		"@unhead/vue": "^2.0.10",
		"eslint": "^9.27.0",
		"nuxt": "^3.17.4",
		"typescript": "^5.8.3",
		"vue": "^3.5.14",
		"vue-router": "^4.5.1"
	},
	"devDependencies": {
		"@nuxt/icon": "^1.13.0",
		"@nuxt/types": "^2.18.1",
		"@types/node": "^22.15.21",
		"vue-tsc": "^2.2.10"
	}
}
